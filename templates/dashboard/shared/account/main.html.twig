{% extends 'base.html.twig' %}

{% set pagetitle = 'My Account'|trans %}
{% block title pagetitle %}

{% block body %}
    <section class="pt-sm-7">
        <div class="container pt-3 pt-xl-5">
            <div class="row">
                {% include "global/dashboard-items-navbar-vertical.html.twig" with {activerd: 'account_main'} %}
                <div class="col-lg-8 col-xl-9 ps-lg-4 ps-xl-6">
                    <div class="d-flex justify-content-between align-items-center mb-5 mb-sm-6">
                        <h1 class="h3 mb-0">{{ 'My profile'|trans }}</h1>
                        <button class="btn btn-primary d-lg-none flex-shrink-0 ms-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasSidebar" aria-controls="offcanvasSidebar">
                            <i class="fas fa-sliders-h"></i> {{ 'Menu'|trans }}
                        </button>
                    </div>
                    <div class="card bg-transparent p-0">
                        <div class="card-header bg-transparent border-bottom p-0 pb-3">
                            <h6 class="mb-0">{{ 'Account status'|trans }}</h6>
                        </div>
                        <div class="card-body flex-grow-1 px-0">
                            <div class="row mb-3">
                                <div class="col-5 text-end">{{ 'First name'|trans }} :</div>
                                <div class="col-7 fw-bold" data-role="firstname">{{ app.user.firstname }}</div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-5 text-end">{{ 'Last name'|trans }} :</div>
                                <div class="col-7 fw-bold" data-role="lastname">{{ app.user.lastname }}</div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-5 text-end">{{ 'Email address'|trans }} :</div>
                                <div class="col-7 fw-bold" data-role="email">{{ app.user.email }}</div>
                            </div>
                            {% if is_granted("ROLE_EMPLOYEE") %}
                                <div class="row mb-3">
                                    <div class="col-5 text-end">{{ 'Telephone No'|trans }} :</div>
                                    <div class="col-7 fw-bold" data-role="phone">{{ app.user.phone }}</div>
                                </div>
                            {% endif %}
                            <div class="row mb-3">
                                <div class="col-5 text-end">{{ 'Registered the'|trans }} :</div>
                                <div class="col-7 fw-bold">
                                    {{ app.user.createdAt | localizeddate('full', 'short', app.request.locale, date_timezone, date_format) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-center my-5"><i class="fas fa-ellipsis"></i></div>
                    <div class="card bg-transparent p-0">
                        <div class="card-header bg-transparent border-bottom p-0 pb-3">
                            <h6 class="mb-0">
                                {{ 'My Profile'|trans }} {{ website_name }}
                            </h6>
                        </div>
                        <div class="card-body flex-grow-1 px-0">
                            {% if is_granted("ROLE_CUSTOMER") %}
                                <div class="row mb-3">
                                    <div class="col-5 text-end">{{ 'Social reason'|trans }} :</div>
                                    <div class="col-7 fw-bold">{{ app.user.client.name }}</div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-5 text-end">{{ 'Member'|trans }} :</div>
                                    <div class="col-7 fw-bold">{{ app.user.client.member.name }}</div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-5 text-end">{{ 'Sales Person'|trans }} :</div>
                                    <div class="col-7 fw-bold">{{ app.user.client.salesPerson.fullName }}</div>
                                </div>
                            {% endif %}
                            {% if is_granted("ROLE_COLLABORATOR") %}
                                <div class="row mb-3">
                                    <div class="col-5 text-end">{{ 'Member'|trans }} :</div>
                                    <div class="col-7 fw-bold">{{ app.user.member.name }}</div>
                                </div>
                            {% endif %}
                            {% if is_granted("ROLE_SALES_PERSON") %}
                                <div class="row mb-3">
                                    <div class="col-5 text-end">{{ 'Member'|trans }} :</div>
                                    <div class="col-7 fw-bold">{{ app.user.member.name }}</div>
                                </div>
                            {% endif %}
                            {% if is_granted("ROLE_MANAGER") and app.user.members|length == 1 %}
                                <div class="row mb-3">
                                    <div class="col-5 text-end">{{ 'Member'|trans }} :</div>
                                    <div class="col-7 fw-bold">{{ app.user.member.name }}</div>
                                </div>
                            {% endif %}
                            {% if is_granted("ROLE_MANAGER") and app.user.members|length > 1 %}
                                <div class="row mb-3">
                                    <div class="col-5 text-end">{{ 'Main member'|trans }} :</div>
                                    <div class="col-7 fw-bold">{{ app.user.member.name }}</div>
                                </div>
                            {% endif %}
                            {% if is_granted("ROLE_CUSTOMER") %}
                                <div class="row">
                                    <div class="col-5 text-end">{{ 'Address'|trans }} :</div>
                                    <div class="col-7 fw-bold">
                                        {{ app.user.client.address.streetAddress }}
                                        {% if app.user.client.address.restAddress is not null %}
                                            <br/>{{ app.user.client.address.restAddress }}
                                        {% endif %}
                                        <br/>{{ app.user.client.address.zipCode }} - {{ app.user.client.address.locality }}
                                    </div>
                                </div>
                            {% endif %}
                            {% if not is_granted("ROLE_CUSTOMER") and app.user.member.address is not null %}
                                <div class="row">
                                    <div class="col-5 text-end">{{ 'Address'|trans }} :</div>
                                    <div class="col-7 fw-bold">
                                        {{ app.user.member.address.streetAddress }}
                                        {% if app.user.member.address.restAddress is not null %}
                                            <br/>{{ app.user.member.address.restAddress }}
                                        {% endif %}
                                        <br/>{{ app.user.member.address.zipCode }} - {{ app.user.member.address.locality }}
                                    </div>
                                </div>
                            {% endif %}
                            <div class="row mb-3">
                                <div class="col-5 text-end">{{ 'Registered the'|trans }} :</div>
                                <div class="col-7 fw-bold">
                                    {{ app.user.createdAt | localizeddate('full', 'short', app.request.locale, date_timezone, date_format) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card bg-transparent p-0">
                        {% if is_granted("ROLE_MANAGER") and app.user.members|length > 1 %}
                            <div class="card-header bg-transparent border-bottom p-0 pb-3">
                                <h6 class="mb-0">
                                    {{ 'Member'|trans }}
                                </h6>
                                <ul class="list-group list-group-flush flex-grow-1" data-role="members">
                                    {% for member in app.user.members %}
                                        <li class="list-group-item">{{ member.name }}</li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% endif %}
                    </div>
                    <div class="text-center my-5"><i class="fas fa-ellipsis"></i></div>
                    <div class="card bg-transparent p-0">
                        <div class="card-header bg-transparent border-bottom p-0 pb-3">
                            <h6 class="mb-0">{{ 'Rule'|trans }}</h6>
                        </div>
                        <div class="list-group list-group-flush flex-grow-1 px-0" data-role="rules">
                            {% for rules_agreement in app.user.rulesAgreements %}
                                <a href="#" data-bs-toggle="modal" data-bs-target="#modal-rules-{{ rules_agreement.rules.id }}" class="list-group-item d-flex flex-column">
                                    <span class="fw-bold">
                                        {{ 'Regulations published on'|trans }}
                                        {{ rules_agreement.rules.publishedAt | localizeddate('full', 'short', app.request.locale, date_timezone, date_format) }}
                                    </span>
                                    <span class="text-muted">
                                        {{ rules_agreement.accepted ? "Accepted"|trans : "Refused"|trans }} le 
                                        {{ rules_agreement.agreedAt | localizeddate('full', 'short', app.request.locale, date_timezone, date_format) }}
                                    </span>
                                </a>
                                <div class="modal fade" id="modal-rules-{{ rules_agreement.rules.id }}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-xl">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">
                                                    {{ 'Regulations published on'|trans }}
                                                    {{ rules_agreement.rules.publishedAt | localizeddate('full', 'short', app.request.locale, date_timezone, date_format) }}
                                                </h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                {{ rules_agreement.rules.content | html_markdown }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
