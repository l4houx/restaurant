{% extends 'base.html.twig' %}

{% set pagetitle = 'Service request'|trans %}
{% block title pagetitle %}

{% block breadcrumb %}
	{% set breadcrumb = [{ "sav_index": ('Service'|trans), (path("sav_trigger", { id: order.id })): ('Trigger a service request'|trans), "current":(pagetitle) }] %}
	{% include "global/breadcrumb.html.twig" with breadcrumb %}
{% endblock %}

{% block body %}
    <section class="pt-0">
        <div class="container">
            <div class="row">
                <div class="col-xl-9 col-lg-8 col-md-12 col-12">
                    <div class="card bg-transparent p-0">
                        <div class="card-header bg-transparent border-bottom d-flex justify-content-between align-items-center p-0 pb-3">
                            <h6 class="card-title mb-0">
                                {{ pagetitle }} 
                            </h6>
                            <div>
                                <a href="" class="btn btn-sm btn-outline-success me-2">
                                    {{ 'Return to list'|trans }}
                                </a>
                            </div>
                        </div>
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'} }) }}
                            <div class="card-body px-0">
                                <div>
                                    {% include "global/message.html.twig" with { type: "info", icon: "fas fa-exclamation", message: ("The fields preceded with a red * are mandatory"|trans) } %}
                                </div>
                                {{ form_errors(form) }}
                                {{ form_widget(form._token) }}
                                {{ form_row(form.line) }}
                                {{ form_row(form.description) }}
                                {{ form_row(form.comment) }}
                                {{ form_row(form._attachments) }}
                                <div id="sav_attachments" class="list-group mt-3"></div>
                                <div class="d-flex justify-content-end mt-4">
                                    <button type="submit" class="btn btn btn-primary mb-0">
                                        {{ 'Send'|trans }}
                                    </button>
                                </div>
                            </div>
                        {{ form_end(form, {render_rest: false}) }}
                    </div>
                </div>
                <div class="col-xl-3 col-lg-4 col-md-12 col-12"></div>
            </div>
        </div>
    </section>
{% endblock %}
